{
    "manifest_version": 3,
    "name": "Learning Ladder Extension",
    "version": "1.0.0",
    "description": "A browser extension starter for the Learning Ladder.",
    "permissions": [
        "storage",
        "tabs"
    ],
    "action": {
        "default_popup": "src/popup/index.html"
    },
    "background": {
        "service_worker": "assets/background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "assets/content.js"
            ]
        }
    ]
}